<h1>Login</h1>

<%= form_with url: login_path do |f| %>
  <p>
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>

  <%= f.submit "Login" %>
<% end %>
<br><br>
<%= link_to "Sign Up", signup_path %> 
<br><br>
<%= link_to "Forgot Password?", new_password_reset_path %>

